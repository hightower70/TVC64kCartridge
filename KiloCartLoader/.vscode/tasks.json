{
        // See https://go.microsoft.com/fwlink/?LinkId=733558
        // for the documentation about the tasks.json format
        "version": "2.0.0",
        "command": "${workspaceRoot}\\sjasmplus.exe",
        "type": "shell",
        "args": [
            "-Wno-rdlow",
            "--raw=kilocart.bin",
            "--syntax=abf",
            "--lst=kilocart.lst",
            "--lstlab",
            "--exp=kilocart.exp",
            "kilocart.a80"
        ],
        "options": {
            "cwd": "${workspaceRoot}"
        },
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared"
        },
        "tasks": [
            {
                "label": "all",
                "problemMatcher": "$errmatcher-sjasmplus",
                "group": {
                    "kind": "build",
                    "isDefault": true
                }
            }
        ]
    }